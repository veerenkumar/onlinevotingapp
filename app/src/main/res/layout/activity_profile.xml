<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context="com.example.laksh_pc.voteapp.profile">

    <ImageView
        android:id="@+id/imgview"
        android:layout_width="180dp"
        android:layout_height="170dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/choosebtn"
        android:layout_marginStart="57dp" />

    <Button
        android:id="@+id/uploadbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Profile Img"
        android:onClick="btnbrowse_click"
        android:layout_below="@+id/imgview"
        android:layout_toEndOf="@+id/choosebtn"
        android:layout_marginTop="62dp" />

    <Button
        android:id="@+id/choosebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Profile Img"
        android:layout_marginStart="29dp"
        android:layout_alignBaseline="@+id/uploadbtn"
        android:layout_alignBottom="@+id/uploadbtn"
        android:layout_alignParentStart="true" />

</android.widget.RelativeLayout>
